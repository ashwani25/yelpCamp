<!DOCTYPE HTML>
<html>
    <head>
        <title>yelpcamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheet/main.css">
        	<script src="https://use.fontawesome.com/c6387218c5.js"></script>
      	<link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-default">
             <div class="container-fluid">
                <div class="navbar-header">
                     <a class="navbar-brand" href="/">Yelpcamp</a>
                </div>
                  <ul class="nav navbar-nav navbar-right">
                        <% if(!currentuser){%>
                               <li><a href="/login">Log In<i style="margin-left:2px" class="fa fa-user" aria-hidden="true"></i></a></li>
                                <li><a href="/register">Sign Up<i style="margin-left:2px" class="fa fa-user-plus" aria-hidden="true"></i></a></li>
                      <%}else{%>
                        <li><a href="#">logged In as <%=currentuser.username%></a></li>
                        <li><a href="/logout"/>Log Out</a></li>
                     <% }%>              
                  </ul>
             </div>
        </nav>
            <div class="container">
                <%if(error&&error.length>0){%>
                      <div class="alert alert-danger">
                       <%=error%>
                </div>
               <% }%>
               <%if(success&&success.length>0){%>
                <div class="alert alert-success">
                     <%=success%>
                </div> 
                <% }%>   
             </div>
             <script>
      function initMap() {
        var uluru = {lat: -25.363, lng: 131.044};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>

 